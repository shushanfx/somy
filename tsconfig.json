{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    ".eslint*",
    "**/.eslint*"
  ]
}
